rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Philosophers texts - read by ingestion function
    match /philosophers/{philosopherId}/{allPaths=**} {
      allow read: if true; // Cloud Functions need to read
      allow write: if request.auth != null; // Admin upload only
    }
    
    // Public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
