rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == resource.data.adminEmail;
    }
    
    // Questions collection - write from API, read by admins only
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if true; // API creates these server-side
    }
    
    // Embeddings collection - read by server, write by ingestion function
    match /embeddings/{embeddingId} {
      allow read: if true; // Server needs to read for RAG
      allow write: if true; // Ingestion function needs to write
    }
    
    // Documents collection - metadata
    match /documents/{documentId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Philosophers collection - public read, admin write
    match /philosophers/{philosopherId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Sessions collection - read/write for session management
    match /sessions/{sessionId} {
      allow read, write: if true; // Sessions managed by API
    }
  }
}
